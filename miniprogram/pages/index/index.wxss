/* miniprogram/pages/index/index.wxss */
.swiper{
  margin: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.swiper-img{
  width: 100%;
  height: 300rpx;
}
.index-tab{
  display: flex;
}
.index-tab view{
  text-align: center;
  flex: 1;
}
.tab-active{
  border-bottom: 5rpx solid rgb(250, 5, 5);
}
.index-list{
  margin-left: 30rpx;
  display: flex;
  flex-wrap: wrap;
  
}
.index-list-item{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  width: 50%;
}
.index-list-img{
  height: 250rpx;
  width: 90%;
}
.item-text{
  width: 90%;
  display: flex;
  justify-content: space-between;
}
.item-text .iconfont{
  color: rgb(248, 8, 8);
}
