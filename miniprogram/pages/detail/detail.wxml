<!--miniprogram/pages/detail/detail.wxml-->
<view class="detail">
  <view class="detail-photo">
   <image class="detail-img" src="{{detail.avatarUrl}}"></image>
  </view>
  <view class="detail-item">
    <text>昵称：</text>
    <text>{{detail.nickName}}</text>
  </view>
  <view class="detail-item">
    <text>个性签名：</text>
    <text>{{detail.signature}}</text>
  </view>
  <view class="detail-item">
    <text>手机号码：</text>
    <block wx:if="{{isFriend}}">
      <text>{{detail.phoneNumber}}</text>
      <call-phone wx:if="{{detail.phoneNumber}}" class="detail-icon" call="{{detail.phoneNumber}}" />
    </block>
    <text wx:else>仅好友可见</text>
  </view>
  <view class="detail-item">
    <text>微信号码：</text>
    <block wx:if="{{isFriend}}">
      <text>{{detail.wxNumber}}</text>
      <copy class="detail-icon" wx:if="{{detail.wxNumber}}" copy="{{detail.wxNumber}}"/>
    </block>
    <text wx:else>仅好友可见</text>
  </view>
  <block wx:if="{{!isHidden}}">
    <button wx:if="{{isFriend}}">已是好友</button>
    <button wx:else bindtap="handleAddFriend">添加好友</button>
  </block>
</view>
