<!--miniprogram/pages/mwssage/message.wxml-->
<view class="message" wx:if="{{isLogin}}">
  <view class="" wx:if="{{!message.length}}">
    <text class="message-title">暂无信息</text>
  </view>
  <view class="message-title" wx:else>
    <text class="">信息列表</text>
    <remove wx:for="{{message}}" wx:key="{{index}} "messageId="{{item}}" bindmyevent="onMyEvent"/>
  </view>
</view>
